@model ResponseModel<UserMenuAccess>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}


<!-- start page title -->
<div class="row">
	<div class="col-12">
		<div class="page-title-box">
			<div class="page-title-right">				
			</div>
            <h4 class="page-title">Access</h4>
		</div>
	</div>
</div>
<!-- end page title -->


<section class="content">
    <div class="container-fluid">
        <div class="row no-gooters">
            <section class="col-md-12">
                <div class="card">
                    <div class="card-body" style="margin: 5px !important;">
                        <form id="formSave" action="@Url.Action("Save","Access", new {  area = "Admin"})" method="post">
                            <div class="row no-gutters">
                                <div class="col-sm-12">

                                    <div class="form-group row">
                                        <label for="Obj.RoleId" class="col-sm-2 col-form-label text-end">Role</label>
                                        <div class="col-sm-6">
                                            <select id="ddlRole" name="Obj.RoleId" class="form-control form-control-sm select2" onchange="fnChange_GetUsers(this)">
                                                <option value="0" selected>-- Select --</option>
                                                @if (Model.SelectListItems != null)
                                                {
                                                    foreach (var item in Model.SelectListItems.Where(x => x.Group == "R"))
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="Obj.UserId" class="col-sm-2 col-form-label text-end">User</label>
                                        <div class="col-sm-6">
                                            <select id="ddlUser" name="Obj.UserId" class="form-control form-control-sm select2">
                                                <option value="0" selected>-- Select --</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="Obj.IsActive" class="col-sm-2 col-form-label text-end">Status</label>
                                        <div class="col-sm-6">
                                            <div class="form-check form-check-inline form-control border-0">
                                                <input type="checkbox" class="form-check-input" id="switch_Status" checked
                                                       onchange="fnChange_Switch(this, 'label_Switch_Status')">
                                                <label role="button" class="form-check-label" for="switch_Status" id="label_Switch_Status" data-true="Active" data-false="Inactive">@((Model.Obj != null && Model.Obj.IsActive == true) || Model.Obj == null || Model.Obj.Id == 0 ? "Active" : "Inactive")</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row no-gutters mb-3">
                                <div class="col-sm-12 text-center">
                                    <button type="button" class="btn btn-info px-5 divformSave_Hide" onclick="fnExecute()">Execute</button>
                                    <button type="submit" class="btn btn-success btnSubmit d-none divformSave_Display">Save</button>
                                    <button type="button" class="btn btn-danger d-none divformSave_Display" onclick="fnClose()">Cancel</button>
                                </div>
                            </div>

                            <div class="row no-gutters" id="divformSave"></div>

                            <div class="clearfix"></div>
                        </form>

                        <div class="clearfix"></div>
                    </div>

                </div>
            </section>
        </div>
    </div>
</section>

